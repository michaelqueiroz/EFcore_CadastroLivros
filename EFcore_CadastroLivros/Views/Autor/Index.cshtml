@model IEnumerable<EFcore_CadastroLivros.Models.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<p>
    <a asp-action="CriarAutor">Cadastrar Autor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="AtualizarAutor" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="ExcluirAutor" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
